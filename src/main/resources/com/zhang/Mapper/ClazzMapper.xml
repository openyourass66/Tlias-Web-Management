<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhang.Mapper.ClazzMapper">
<!--    分页查询-->
    <select id="list" resultType="com.zhang.pojo.Clazz">
        select c.*,e.name masterName from Clazz c left join emp e on c.masterId=e.id
        <where>
            <if test="name!=null and name!=''">
                e.name like concat('%',#{name},'%')
            </if>
            <if test="begin!=null and end!=null">
                and c.endDate between #{begin} and #{end}
            </if>
            order by c.updateTime desc
        </where>
    </select>
</mapper>